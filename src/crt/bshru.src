	.assume	adl=1

	.section	.text
	.global	__bshru
	.type	__bshru, @function

.ifdef PREFER_OS_CRT

	.set	__bshru, 0x000104

.else

__bshru:
; CC: if B!=0: B*(5*r(PC)+1)+6*r(PC)+(ADL?6*r(SPL)+3*w(SPL):4*r(SPS)+2*w(SPS))+1
;     if B==0: 4*r(PC)+(ADL?3*r(SPL):2*r(SPS))+2
	inc	b
	dec	b
	ret	z
	push	bc
.L.loop:
	srl	a
	djnz	.L.loop
	pop	bc
	ret

.endif
