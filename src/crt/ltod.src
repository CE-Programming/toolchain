__ltod:
	; i32_ret_f64
	ld	d, a
	bit	7, e
.ltod_skip:
	jr	z, .ultod_skip	; positive argument
	; return -_ultod_c(labs(x))
	call	__lneg
	push	iy, de, hl
	call	__ultod_c
	set	7, b	; negative result
	pop	af, af, iy
	ret
	
	extern __ultod_c, __lneg
