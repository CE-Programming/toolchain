	assume	adl=1

	section	.text

	public	__ultof

; round to nearest ties to even
__ultof:
	bit	7, a
	jp	z, __ltof	; common case
	; A:UBC > INT32_MAX
	res	7, a	; sets the LSB of the exponent
	sla	c	; C = Round, NZ = Sticky
	; A:UBC >>= 8
	push	af
	inc	sp
	push	bc
	inc	sp
	pop	bc
	inc	sp
	ld	a, $4F	; sets the exponent
	ret	nc	; round down
	inc	bc
	ret	nz	; round up (this will not overflow because bit 23 is 0)
	; round to even
	res	0, c
	ret

	extern	__ltof
