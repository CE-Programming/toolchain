	assume	adl=1

	section	.text
	public	_sbrk
_sbrk:
	pop	de
	ex	(sp),hl
	push	de
	ld	de,(__sbrkbase)
	add	hl,de
	jq	c,.fail
	ld	bc,not ___heaptop
	add	hl,bc
	jq	c,.fail
	sbc	hl,bc
	ld	(__sbrkbase),hl
	ex	de,hl
	ret
.fail:
	or	a,a
	sbc	hl,hl
	ret

	section	.data
	private	__sbrkbase
__sbrkbase:
	dl	___heapbot

	extern	___heapbot
	extern	___heaptop
