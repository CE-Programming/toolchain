	assume	adl=1

	section	.text
	
	public	_copysign, _copysignf
_copysign:
_copysignf:
	pop	bc
	pop	de
	pop	hl
	ld	a,l
	inc	sp
	ex	(sp),hl
	dec	sp
	push	hl
	push	de
	push	bc
	add	hl,hl
	rla
	rrca
	ld	l,a
	ex	de,hl
	ret

	public	_copysignl
_copysignl:
	ld	hl, 19	; upper 8 bits of y
	add	hl, sp
	rl	(hl)	; extract the signbit of y
	pop	iy, hl, de, bc
	push	bc, de, hl
	rl	b	; clear the signbit of x, signbit of y is in the LSB
	rrc	b	; rotate the LSB into the MSB to copy the signbit of y
	jp	(iy)
