include_rules
: |> ln -s \$(which @(EZCC)) %o |> $(install)/bin/ez80-clang $(install)/<install>
: |> ln -s \$(which @(EZLINK)) %o |> $(install)/bin/ez80-link $(install)/<install>
: |> ln -s \$(which @(FASMG)) %o |> $(install)/bin/fasmg $(install)/<install>
: $(install)/<install> |> ^ zip %o^ zip --quiet %o %<install> |> CEdev.zip
: src/<libs> | tools/<convbin> |> %<convbin> --oformat 8xg-auto-extract \$(printf -- --input\ %%s\  \$(printf %%s\\n %<libs> | grep \\.8xv$)) --output %o |> clibs.8xg
